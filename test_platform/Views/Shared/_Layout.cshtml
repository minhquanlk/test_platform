    <!-- App js -->
    <script src="~/assets/js/main.js"></script>
    <script>
        const btnApply = document.getElementById('apply-now-btn');
        const btnHeader = document.getElementById('apply-header');
        
        var isBlue = true;
        setInterval(function () {
            if (isBlue === false) {
                isBlue = true;
                btnApply.style.backgroundColor = "#0b58a1";
                btnHeader.style.backgroundColor = "#0b58a1";
            }
            else {
                isBlue = false;
                btnApply.style.backgroundColor = "#ef9354";
                btnHeader.style.backgroundColor = "#ef9354";
            }
        }, 500);
    </script>
