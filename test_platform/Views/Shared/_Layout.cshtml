    <!-- Fullpage - Social icons -->
    <div class="social-list-btn d-flex flex-column">
        <a class="social-btn" id="apply-now-btn" href="#!">APPLY NOW!</a>
        <a class="social-btn" href="https://www.facebook.com/masanconsumercareers" target="_blank"><i class="fab fa-facebook-f"></i></a>
